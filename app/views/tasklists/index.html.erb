<h1>タスク一覧</h1>

<% if @tasklists.any? %>
 <table class="table table-striped">
   <thead>
     <tr>
       <th>id</th>
       <th>タスク</th>
       <th>ステータス</th>
     </tr>
   </thead>
   <tbody>
     <% @tasklists.each do |tasklist| %>
       <tr>
         <td><%= link_to tasklist.id, tasklist_path(tasklist) %></td>
         <td><%= tasklist.content %></td>
         <td><%= tasklist.status %></td>
       </tr>
     <% end %>
    </tbody>
 </table>
<% end %>
<%= link_to '新規タスクの提出', new_tasklist_path %>